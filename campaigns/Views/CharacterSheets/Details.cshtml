            @Html.DisplayNameFor(model => model.Abilities)
        </dt>
        <dd>
            <table class="table">
                @*
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                *@
                @foreach (var item in Model.Abilities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ability.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                    </tr>
                }
            </table>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skills)
        </dt>
        <dd>
            <table class="table">
                @foreach (var item in Model.Skills)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Skill.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
