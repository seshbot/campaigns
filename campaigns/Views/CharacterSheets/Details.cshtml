<div class="row">
    <div class="col-md-3">
        <h4>@pageTitle<br/><small>@Model.Description.ShortText <a class="pull-right" data-toggle="collapse" href="#characterDescription">more &raquo;</a></small></h4>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-4">
                <h4>Level @Html.DisplayFor(model => model.Level) @Html.DisplayFor(model => model.Class.Name)<br /><small>Class</small></h4>
            </div>
            <div class="col-md-4">
                <h4>Noble<br /><small>Background</small></h4>
            </div>
            <div class="col-md-4">
                <h4>Seshbot<br /><small>Player</small></h4>
            </div>
        </div>
        <div class="row" style="padding-top:16px;">
            <div class="col-md-4">
                <h4>@Html.DisplayFor(model => model.Race.Name)<br /><small>Race</small></h4>
            </div>
            <div class="col-md-4">
                <h4>Neutral Good<br /><small>Alignment</small></h4>
            </div>
            <div class="col-md-4">
                <h4>@Html.DisplayFor(model => model.Xp) XP<br /><small>Experience</small></h4>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="collapse" id="characterDescription">
            <div class="well">
                @Html.DisplayFor(model => model.Description.Text)
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-4">
                @foreach (var ability in Model.DerivedStatistics.Abilities)
                {
                    <div style="padding-bottom: 1.2em" ng-mouseenter="selectedAbilityId = @ability.Allocation.Ability.Id" ng-mouseleave="selectedAbilityId = -1">
                        <fieldset ng-class="{'text-success': selectedAbilityId == @ability.Allocation.Ability.Id}" style="border: 1px #ddd solid; border-radius: 3px;">
                            <legend align="center" style="width: inherit; border: 0 #ddd solid; margin: 0 1em; padding: 0 2px; font-size: 1em">
                                @ability.Allocation.Ability.ShortName
                            </legend>
                            <div class="text-center" style="margin-bottom: 20px">
                                <h3>@ability.Modifier.ToString("+#;-#;0")</h3>
                            </div>
                            <div ng-class="{'selected': selectedAbilityId == @ability.Allocation.Ability.Id}" class="text-center muted" style="border-bottom-left-radius: 3px; border-bottom-right-radius: 3px; border-top: 1px solid #ddd; padding: 6px">
                                <span>@ability.Value</span>
                            </div>
                        </fieldset>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr><td width="20%" class="text-center">0</td><td><strong>Inspiration</strong></td></tr>
                    </table>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr>
                            <td width="20%" class="text-center">@Model.DerivedStatistics.ProficiencyBonus</td>
                            <td><strong>Proficiency Bonus</strong></td>
                        </tr>
                    </table>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr><td width="20%" class="text-center">0</td><td><small>Strength</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Dexterity</small></td></tr>
                        <tr><td class="text-center">1</td><td><small>Constitution</small></td></tr>
                        <tr><td class="text-center">3</td><td><small>Intelligence</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Wisdom</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Charisma</small></td></tr>
                    </table>
                    <div class="panel-footer text-center"><strong>Saving Throws</strong></div>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        @foreach (var skill in Model.DerivedStatistics.Skills)
                        {
                            <tr ng-class="{'selected': selectedAbilityId == @skill.Allocation.Skill.Ability.Id}" ng-mouseenter="selectedAbilityId = @skill.Allocation.Skill.Ability.Id" ng-mouseleave="selectedAbilityId = -1">
                                <td width="20%" class="text-center">@skill.Value</td><td><small>@skill.Allocation.Skill.Name</small> (@skill.Allocation.Skill.Ability.ShortName)</td>
                            </tr>
                        }
                    </table>
                    <div class="panel-footer text-center"><strong>Skills</strong></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body text-center">8</div>
                    <div class="panel-footer text-center"><small><strong>AC</strong></small></div>
                </div>
            </div>
