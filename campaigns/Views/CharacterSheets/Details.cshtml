@model campaigns.Models.CharacterSheet

@{
    ViewBag.Title = "Details";
    var pageTitle = Html.DisplayFor(model => model.Name);
    if (MvcHtmlString.IsNullOrEmpty(pageTitle))
    {
        pageTitle = MvcHtmlString.Create("Unnamed");
    }
}

<p/>
<div class="row">
    <div class="col-md-3">
        <h3>@pageTitle</h3>
        <a data-toggle="collapse" href="#characterDescription">Description &raquo;</a>
    </div>
    <div class="col-md-9">
        <div class="row" style="padding-top:16px;">
            <div class="col-md-4">
                <abbr title="Class and Level">@Html.DisplayFor(model => model.Class.Name) Level @Html.DisplayFor(model => model.Level)</abbr>
            </div>
            <div class="col-md-4">
                <abbr title="Background">Noble</abbr>
            </div>
            <div class="col-md-4">
                <abbr title="Player">Paul</abbr>
            </div>
        </div>
        <div class="row" style="padding-top:16px;">
            <div class="col-md-4">
                <abbr title="Race">@Html.DisplayFor(model => model.Race.Name)</abbr>
            </div>
            <div class="col-md-4">
                <abbr title="Alignment">Neutral Good</abbr>
            </div>
            <div class="col-md-4">
                <abbr title="Experience">@Html.DisplayFor(model => model.Experience) XP</abbr>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="collapse" id="characterDescription">
            <div class="well">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
</div>
