@model campaigns.Models.CharacterSheet

@{
    ViewBag.Title = "Details";
    var pageTitle = Html.DisplayFor(model => model.Name);
    if (MvcHtmlString.IsNullOrEmpty(pageTitle))
    {
        pageTitle = MvcHtmlString.Create("Unnamed");
    }
}

<p/>
<div class="row">
    <div class="col-md-3">
        <h3>@pageTitle</h3>
        <a data-toggle="collapse" href="#characterDescription">Description &raquo;</a>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-4">
                <p class="form-control-static">@Html.DisplayFor(model => model.Class.Name) Level @Html.DisplayFor(model => model.DerivedStatistics.Level)</p>
            </div>
            <div class="col-md-4">
                <p class="form-control-static">Noble</p>
            </div>
            <div class="col-md-4">
                <p class="form-control-static">Seshbot</p>
            </div>
        </div>
        <div class="row" style="padding-top:16px;">
            <div class="col-md-4">
                <p class="form-control-static">@Html.DisplayFor(model => model.Race.Name)</p>
            </div>
            <div class="col-md-4">
                <p class="form-control-static">Neutral Good</p>
            </div>
            <div class="col-md-4">
                <p class="form-control-static">@Html.DisplayFor(model => model.Experience) XP</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="collapse" id="characterDescription">
            <div class="well">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-3">
                @foreach (var ability in Model.DerivedStatistics.Abilities)
                {
                    <div style="padding-bottom: 1.2em">
                        <fieldset style="border: 1px #ddd solid; border-radius: 3px;">
                            <legend align="center" style="width: inherit; border: 0px #ddd solid; margin: 0 1em; padding: 0 2px; font-size: 1em; font-weight: bold">
                                @ability.Allocation.Ability.ShortName
                            </legend>
                            <div class="text-center" style="padding: .5em; font-size: 1.2em">
                                @ability.Modifier.ToString("+#;-#;0")
                            </div>
                            <div class="text-center" style="border-bottom-left-radius: 3px; border-bottom-right-radius: 3px; border-top: 1px solid #ddd; background-color: #f5f5f5">
                                <small>@ability.Value</small>
                            </div>
                        </fieldset>
                    </div>
                }
            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr><td width="20%" class="text-center">0</td><td><strong>Inspiration</strong></td></tr>
                    </table>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr><td width="20%" class="text-center">0</td><td><strong>Proficiency Bonus</strong></td></tr>
                    </table>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        <tr><td width="20%" class="text-center">0</td><td><small>Strength</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Dexterity</small></td></tr>
                        <tr><td class="text-center">1</td><td><small>Constitution</small></td></tr>
                        <tr><td class="text-center">3</td><td><small>Intelligence</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Wisdom</small></td></tr>
                        <tr><td class="text-center">0</td><td><small>Charisma</small></td></tr>
                    </table>
                    <div class="panel-footer text-center"><strong>Saving Throws</strong></div>
                </div>
                <div class="panel panel-default">
                    <table class="table table-striped table-hover">
                        @foreach (var skill in Model.DerivedStatistics.Skills)
                        {
                            <tr><td width="20%" class="text-center">@skill.Value</td><td><small>@skill.Allocation.Skill.Name</small> (@skill.Allocation.Skill.Ability.ShortName)</td></tr>
                        }
                    </table>
                    <div class="panel-footer text-center"><strong>Skills</strong></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body text-center">8</div>
                    <div class="panel-footer text-center"><small><strong>AC</strong></small></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body text-center">-1</div>
                    <div class="panel-footer text-center"><small><strong>Initiative</strong></small></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body text-center">30</div>
                    <div class="panel-footer text-center"><small><strong>Speed</strong></small></div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body text-center">...</div>
            <div class="panel-footer text-center"><small><strong>Hit Points</strong></small></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">...</div>
                    <div class="panel-footer text-center"><small><strong>Hit Dice</strong></small></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">...</div>
                    <div class="panel-footer text-center"><small><strong>Death Saves</strong></small></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <table class="table table-striped table-hover table-bordered">
                        <tr><td>Short Sword</td><td>+2</td><td>Slashing</td></tr>
                        <tr><td></td><td></td><td></td></tr>
                    </table>
                    <table class="table table-striped table-hover table-bordered">
                        <tr><td></td></tr>
                        <tr><td></td></tr>
                        <tr><td></td></tr>
                        <tr><td></td></tr>
                    </table>
                    <div class="panel-footer text-center"><small><strong>Attacks &amp; Spell-Casting</strong></small></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body text-center">...</div>
                    <div class="panel-footer text-center"><small><strong>Equipment</strong></small></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <table class="table table-striped table-hover">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <div class="panel-footer text-center"><small><strong>Personality Traits</strong></small></div>
        </div>
        <div class="panel panel-default">
            <table class="table table-hover">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <div class="panel-footer text-center"><small><strong>Ideals</strong></small></div>
        </div>
        <div class="panel panel-default">
            <table class="table table-hover">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <div class="panel-footer text-center"><small><strong>Bonds</strong></small></div>
        </div>
        <div class="panel panel-default">
            <table class="table table-hover">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <div class="panel-footer text-center"><small><strong>Flaws</strong></small></div>
        </div>
        <div class="panel panel-default">
            <table class="table table-hover">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <div class="panel-footer text-center"><small><strong>Features and Traits</strong></small></div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
